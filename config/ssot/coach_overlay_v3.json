  "orchestrator": {
    "concepts": {
      "learning_functions": {
        "COACH_TRANSLATE": "Uitleg + vertaalslag naar eigen context; geen rollenspel.",
        "MICRO_DRILL": "Korte oefening op micro-vaardigheid (kan zonder full roleplay).",
        "ROLEPLAY_DRILL": "Rollenspel op 1 vaardigheid/techniek met vooraf ingestelde klant-houding.",
        "ROLEPLAY_INTEGRATED": "Rollenspel over meerdere technieken (bundle/fase) met EPIC progressie en feedback."
      },
      "context_depth_levels": {
        "LIGHT": "Minimale context (voldoende voor coaching).",
        "STANDARD": "Context + scenario (voldoende voor geloofwaardige micro-roleplay).",
        "DEEP": "Scenario + waardekaart + bezwaarbank + (optioneel) artifacts voor cross-fase roleplay."
      }
    },
    "context_layers": {
      "base": {
        "persist": "user_context",
        "keys": [
          "sector",
          "product",
          "klant_type",
          "verkoopkanaal",
          "ervaring"
        ],
        "purpose": "Universele basiscontext voor personalisatie en klant-persona."
      },
      "scenario": {
        "persist": "user_context.additionalContext",
        "keys": [
          "afspraak_type",
          "gespreksdoel",
          "beslisser_rol",
          "typische_context",
          "lastige_openingsvragen"
        ],
        "purpose": "Meeting-situatie en typische start van het gesprek."
      },
      "value_map": {
        "persist": "user_context.additionalContext",
        "keys": [
          "pains",
          "baten",
          "koopredenen_recent",
          "success_stories_kort",
          "usp_naar_baat_map"
        ],
        "purpose": "Inputs om Probe/Impact/OVB geloofwaardig te maken."
      },
      "objection_bank": {
        "persist": "user_context.additionalContext",
        "keys": [
          "bezwaren_typisch",
          "twijfels_typisch",
          "uitstelredenen_typisch",
          "angsten_typisch",
          "concurrentie_typisch"
        ],
        "purpose": "Inputs voor afritten, bezwarenbehandeling en closing rollenspellen."
      },
      "offer_map": {
        "persist": "technique_session_or_user_context.additionalContext",
        "keys": [
          "oplossing_kern",
          "voordelen",
          "baten_per_voordeel",
          "bewijsvoering",
          "prijsrange"
        ],
        "purpose": "Inputs om fase 3/4 rollenspellen te kunnen spelen met consistente oplossing."
      }
    },
    "artifacts": {
      "scenario_snapshot": {
        "purpose": "Bewaar klant-persona parameters + scenario zodat je over fase 2→3 dezelfde klant kan blijven spelen.",
        "recommended_fields": [
          "persona_params",
          "buying_clock_stage",
          "difficulty_level",
          "seed",
          "summary"
        ]
      },
      "discovery_brief": {
        "purpose": "Samenvatting van discovery output (pains/baten/criteria/urgentie) die fase 3 voedt.",
        "recommended_fields": [
          "pains",
          "baten",
          "criteria",
          "budget",
          "timing",
          "alternatieven",
          "stakeholders",
          "commitment_zin"
        ]
      },
      "offer_brief": {
        "purpose": "Samenvatting van OVB pitch (oplossing→voordeel→baat + next step) die fase 4 voedt.",
        "recommended_fields": [
          "oplossing",
          "ovb_map",
          "price",
          "next_step",
          "assumpties"
        ]
      }
    },
    "roleplay_gates": {
      "global": {
        "requires_layers_by_depth": {
          "LIGHT": [
            "base"
          ],
          "STANDARD": [
            "base",
            "scenario"
          ],
          "DEEP": [
            "base",
            "scenario",
            "value_map",
            "objection_bank"
          ]
        },
        "requires_artifacts_for_phase": {
          "3": [
            "discovery_brief"
          ],
          "4": [
            "offer_brief"
          ]
        }
      }
    },
    "roleplay_offer_policy": {
      "for_mode_COACH_CHAT_THEN_ROLEPLAY": {
        "auto_offer_after_coach_turns": 2,
        "also_offer_when_user_says_ready": true,
        "user_can_decline": true
      }
    }
  }
}