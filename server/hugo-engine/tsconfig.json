{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@shared/*": ["../../shared/*"]
    },
    "baseUrl": "."
  },
  "include": ["./**/*.ts", "../../shared/**/*.ts"]
}
